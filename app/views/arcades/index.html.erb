<p id="notice"><%= notice %></p>

<h1>Arcades</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Comments count</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arcades.each do |arcade| %>
      <tr>
        <td><%= arcade.name %></td>
        <td><%= arcade.address %></td>
        <td><%= arcade.comments_count %></td>
        <td><%= arcade.owner.name %></td>
        <td><%= link_to 'Show', arcade %></td>
        <td><%= link_to 'Edit', edit_arcade_path(arcade) %></td>
        <td><%= link_to 'Destroy', arcade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Arcade', new_arcade_path %>
